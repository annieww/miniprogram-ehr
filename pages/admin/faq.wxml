	<!-- FAQ List Accordion -->
	<wux-accordion-group accordion >
		<view class="faq-accordion-box" wx:for="{{faqList}}" wx:key="index">
      <view class="accordion-item" data-index="{{index}}">
				<view class="del-box" wx:if="{{isAdmin}}" bindtap="deleteFaq" data-index="{{index}}">
					<wux-icon class="del-icon" size="18" color="#d81e06" type="ios-remove-circle"/>
				</view>
				<view>
					<wux-accordion bindtap="openAccordion" data-index="{{index}}" class="question-txt" title="{{item.question}}">{{item.answer}}
						<!-- Language Icon -->
						<view data-index="{{index}}" bindtap="translateBut"><image class="switch-icon" src="/images/cn-switcher.png"/></view>
						<!-- Translated Text -->
						<view class="translation-box" wx:if="{{showTranslation}}">
							<view><textarea maxlength="1200" disabled="{{true}}" value="{{translateResult}}" class="translatetxt"></textarea></view>
							<view><image class="clear-icon" data-index="{{index}}" bindtap="clearBut" src="/images/clear.png"/></view>
						</view>
					</wux-accordion>
				</view>
			</view>
		</view>
  </wux-accordion-group>

	<!-- Admin FAQ Form -->
	<view class="add-faq-container">
		<wux-icon class="add-icon" type="ios-add-circle" size="30" color="#444" bindtap="toggleAddForm" wx:if="{{isAdmin && !showAddForm}}"/>
		<wux-icon class="add-icon" type="ios-arrow-dropup-circle" size="30" color="#444" bindtap="toggleAddForm" wx:if="{{showAddForm}}"/>

			<view class="add-faq-form" wx:if="{{showAddForm}}">
				<input class="add-input" placeholder="Question" maxlength="600" bindinput="updateNewQuestion"/>
				<textarea class="add-input" placeholder="Answer" maxlength="1080" bindinput="updateNewAnswer" />
				<button class="btn-faq" plain="true" bindtap="addFaq">Submit</button>
			</view>
	</view>

