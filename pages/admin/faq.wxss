/* pages/admin/faq.wxss */
.header {
  display: flex;
  flex-direction: column;
  text-align: center;
	padding: 20rpx;
}

.page-content {
	padding: 24rpx;
	padding-bottom: 35rpx;
}

.page-title {
  font-size: 40rpx;
  /* color: #FD5200; */
	font-weight: bold;
	padding-left: 20rpx;
	margin-top: 30rpx;
	margin-bottom: 20rpx;
}

.about {
	/* color: #444; */
	text-align: start;
	margin-bottom: 60rpx;
	font-size: 32rpx;
	background-color: #f7d8d0;
	border-radius: 40rpx 40rpx 0 40rpx;
	padding: 35rpx;
	position: relative;
}

.image-box {
	display: flex;
	justify-content: center;
}

.header-img {
	width: 365rpx;
	height: 318rpx;
}

.faq-icon {
	margin-right: 8rpx;
}

.faq-container {
	position: relative;
}

.faq-title {
	position: absolute;
	left: 16rpx;
	font-size: 32rpx;
	font-weight: 450;
}

.question-box {
	font-weight: 450;
	background-color: #eeeeee;
	color: #444;
	cursor: pointer;
	padding: 8rpx;
	padding-left: 10rpx;
	padding-right: 10rpx;
	border: none;
	outline: none;
	display: flex;
	margin-bottom: 5rpx;
	position: relative;
	border-radius: 20rpx;
}

.delete-box {
	position: relative;
	display: flex;
}

.delete-icon {
	position: absolute;
	left: 40rpx;
	top: 12rpx;
}

.question-arrow-box {
	position: relative;
	display: flex;
	justify-content: start;
	width: 590rpx;
	margin-left: 9rpx;
	font-weight: 450;
	padding-top: 8rpx;
	padding-bottom: 8rpx;
}

.question {
	margin-left: 12rpx;
	font-size: 30rpx;
}

.item-question {
	margin-right: 5rpx;
}

.active, .question:hover{
	background-color: #ccc;
}

.answer {
	color: #444;
	text-align: left;
	padding-left: 50rpx;
	padding-right: 50rpx;
	padding-top: 10rpx;
	padding-bottom: 30rpx;
	font-size: 30rpx;
	font-weight: 400;
}

.add-icon {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 40rpx;
}

.add-input {
	border: 1px solid #ccc;
	height: 32;
	width: 600rpx;
	padding: 10rpx;
	font-size: 30rpx;
	margin: 10rpx auto
}

.add-faq-form {
	margin-top: 40rpx;
	margin-bottom: 500rpx;
}

.btn-faq {
	margin-top: 40rpx;
	border-radius: 40rpx;
}

.add-faq-container {
	padding-bottom: 150rpx;
}