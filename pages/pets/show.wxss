/* pages/pets/show.wxss */

/* pet image */
.pet-img {
  z-index: 1;
  position: sticky;
  width: 100vw;
  height: 700rpx;
  top: 0;
	background-color: rgb(177, 171, 171);
}

.favorite-share-box {
	display: flex;
}

.favorite-box {
	margin-right: 10rpx;
}

.favorite-number {
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: -10rpx;
	color: grey;
}

.share-icon {
	width: 70rpx;
	height: 70rpx;
}

.share-box {
	width: 70rpx;
	height: 70rpx;
}

.heart-icon {
	width: 70rpx;
	height: 70rpx;
}

.need-box {
	display: flex;
	justify-content: center;
	align-items: center;
}

.need-icon {
	height: 42rpx;
	width: 42rpx;
	margin-left: 6rpx;
}

.pet-avt {
  height: 700rpx;
  object-fit: cover;
	width: 100%;
}

/* pet card */
.pet-card {
	padding: 20rpx;
	margin-bottom: 60rpx;
}

.pet-name {
  font-size: 60rpx;
  font-weight: bold;
}

.pet-info {
	padding-top: 30rpx;
	padding-bottom: 30rpx;
  display: flex;
  justify-content: space-evenly;
	background-color: #eeeeee;
	border-radius: 30rpx;
	color: #343a40;
}

.info-text {
	font-weight: 300;
	color:#343a40;
}

.yes-no {
  display: flex;
	justify-content: start;
	align-items: center;
}

.yes-icon {
  width: 34rpx;
	height: 25rpx;
	margin-left: 10rpx;
}

.no-icon {
	width: 34rpx;
	height: 34rpx;
	margin-left: 10rpx;
}

.more-info {
  display: flex;
  flex-direction: column;
}

.info-title {
	font-weight: 500;
	margin-top: 30px;
	color: #343a40;
}

.pet-name-box {
	display: flex;
	justify-content: space-between;
	margin-bottom: 25rpx;
}

.special-need {
	font-size: 28rpx;
	font-weight: 400;
	background-color: #fb6f92;
	color:white;
	width: 200rpx;
	border-radius: 20rpx;
	padding: 4rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.gender-box {
	display: flex;
	justify-content: start;
	align-items: center;
}

.pet-gender-icon {
  width: 32rpx;
	height: 32rpx;
	margin-left: 10rpx;
}

.buttons-box {
  display: flex;
  margin: 20rpx;
	gap: 30rpx;
}

.bottom-container {
  z-index: 3;
  position: relative;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
	margin-top: -40rpx;
  background-color: white;
  padding: 20rpx;
	/* min-height: 60vh; */
	min-height: 70vh;
}

.mask {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	/* background-color: rgba(0, 0, 0, 0.2); */
	z-index: 9999;
}

.window {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	padding: 20rpx;
	width: 75%;
	height: 25%;
	border: 1px solid #808080;
	background-color: white;
	position: relative;
	border-radius: 40rpx;
	box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
}

.btn-understand {
	background-color: white;
	color: grey;
	border: 1px solid grey;
	border-radius: 40rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 50rpx;
	font-size: 16px;
}

.dog-icon {
	width: 90rpx;
	height: 90rpx;
}

.window-content {
	padding: 5rpx;
	text-align: center;
}

.box {
  display: flex;
}

.contact-box {
	display: flex;
	justify-content: center;
}

.btn-contact {
	background-color:#fc9e87;
	color: white;
	border-radius: 40rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.msg-icon {
	width: 40rpx;
	height: 40rpx;
	margin-top: 4rpx;
	margin-right: 8rpx;
}

.btn-delete {
	background-color: white;
	color: grey;
	border: 1px solid grey;
	border-radius: 40rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.btn-edit {
	background-color: #00B5A3;
	color: white;
	border-radius: 40rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.description-box {
	display: flex;
	justify-content: flex-start;
}

.text-line {
	width: 2rpx;
	background-color: black;
	margin-top: 5rpx;
	margin-right: 26rpx;
}