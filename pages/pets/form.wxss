/* pages/pets/form.wxss */
.page {
	padding-bottom: 180rpx;
}

.page-title {
  font-size: 40rpx;
  color: #00B5A3;
	font-weight: bold;
	padding-left: 30rpx;
	margin-top: 30rpx;
}

.btn-area {
  display: flex;
  margin: 20rpx;
	gap: 20rpx;
	margin-top: 60rpx;
}

.btn-submit {
	background-color: #00B5A3;
	color: white;
	border-radius: 40rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.btn-reset {
	background-color: white;
	color: grey;
	border: 1px solid grey;
	border-radius: 40rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.image-card {
  width: 156rpx;
  height: 156rpx;
  border: 1PX dashed #d9d9d9;
  border-radius: 8rpx;
  margin: 0rpx 0rpx 0rpx 25rpx;
  background-color: #fafafa;
  transition: border-color .3s ease;
  /* box-sizing: border-box; */
  /* float: left */
}

.wux-select {
	margin-bottom: 80rpx;
}